{
  "name": "havenly/server",
  "description": "Havenly Backend API - Digital Rental and Tenant Management System",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Group 10",
      "email": "havenly@example.com"
    }
  ],
  "require": {
    "php": ">=8.0",
    "dompdf/dompdf": "^2.0",
    "firebase/php-jwt": "^6.5",
    "intervention/image": "^2.7",
    "phpmailer/phpmailer": "^6.8",
    "respect/validation": "^2.2",
    "vlucas/phpdotenv": "5.6"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6"
  },
  "autoload": {
    "psr-4": {
      "Havenly\\controllers\\": "src/controllers/",
      "Havenly\\models\\": "src/models/",
      "Havenly\\middleware\\": "src/middleware/",
      "Havenly\\services\\": "src/services/",
      "Havenly\\utils\\": "src/utils/",
      "Havenly\\helpers\\": "src/helpers/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Havenly\\tests\\": "tests/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "scripts": {
    "post-install-cmd": [
      "@php -r \"file_exists('config/.env') || copy('config/.env.example', 'config/.env');\""
    ],
    "test": "phpunit"
  }
}
